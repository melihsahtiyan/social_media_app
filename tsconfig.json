{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "build",
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"moduleDetection": "auto",
		"sourceMap": true,
		"removeComments": true,
		"resolveJsonModule": true
	},
	"include": ["./**/*.ts", "./src/**/*", "./test/**/*"]
}
